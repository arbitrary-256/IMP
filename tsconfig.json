{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "esnext"
  },
  "typedocOptions": {
    "entryPoints": ["src-api/", "src-bin", "src-ui/index.tsx"],
    "entryPointStrategy": "expand",
    "logLevel": "Error",
    "out": "docs"
  },
  "include": ["public", "src-api/**/*", "src-bin/**/*", "src-ui/**/*"],
  "exclude": ["src/scripts"]
}

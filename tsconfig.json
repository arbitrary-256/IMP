{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["es6", "dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "esnext"
  },
  "typedocOptions": {
    "categorizeByGroup": true,
    "categoryOrder": ["Category Name", "Other Category", "*"],
    "cleanOutputDir": true,
    "entryPoints": ["src-api/", "src-ui/", "src-ui/scripts/webzip.ts"],
    "entryPointStrategy": "expand",
    "exclude": ["**/node_modules/**", "**/dist/**", "**/docs/**", "**/test/**", "**/__tests__/**"],
    "logLevel": "Error",
    "out": "docs",
    "readme": "README.md",
    "sort": ["source-order"],
  },
  "include": ["public/**/*", "src-api/**/*", "src-ui/**/*"],
  "exclude": ["src-ui/scripts"],
}
